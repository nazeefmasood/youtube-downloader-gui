{
  "name": "vidgrab",
  "version": "1.3.1",
  "description": "Fast & beautiful YouTube video downloader - Download videos, playlists, and channels with ease",
  "main": "dist-electron/main.js",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build && tsc -p tsconfig.electron.json",
    "preview": "vite preview",
    "electron:dev": "concurrently \"vite\" \"tsc -p tsconfig.electron.json -w\" \"sleep 5 && electron . --dev --no-sandbox --ozone-platform=x11\"",
    "electron:build": "npm run build && electron-builder",
    "build:win": "npm run build && electron-builder --win",
    "build:mac": "npm run build && electron-builder --mac",
    "build:linux": "npm run build && electron-builder --linux",
    "build:all": "npm run build && electron-builder --win --mac --linux",
    "test:pot": "npx tsx tests/pot-token.test.ts",
    "test:pot:integration": "npx tsx tests/pot-token-integration.test.ts",
    "test:all": "bash tests/run-tests.sh"
  },
  "keywords": [
    "youtube",
    "downloader",
    "electron",
    "yt-dlp",
    "video",
    "vidgrab"
  ],
  "author": {
    "name": "Nazeef Masood",
    "email": "nazeef@vidgrab.app"
  },
  "license": "MIT",
  "type": "commonjs",
  "devDependencies": {
    "@tailwindcss/vite": "^4.1.18",
    "@types/node": "^25.1.0",
    "@types/react": "^19.2.10",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.2",
    "autoprefixer": "^10.4.24",
    "concurrently": "^9.2.1",
    "electron": "^40.1.0",
    "electron-builder": "^26.7.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.18",
    "@types/jsdom": "^21.1.7",
    "typescript": "^5.9.3",
    "vite": "^7.3.1"
  },
  "dependencies": {
    "bgutils-js": "^3.1.0",
    "clsx": "^2.1.1",
    "ffmpeg-static": "^5.3.0",
    "jsdom": "^25.0.1",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "tailwind-merge": "^3.4.0",
    "youtubei.js": "^12.2.0",
    "zustand": "^5.0.11"
  },
  "build": {
    "appId": "com.vidgrab.app",
    "productName": "VidGrab",
    "compression": "maximum",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*"
    ],
    "extraResources": [
      {
        "from": "binaries",
        "to": "binaries/",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "assets/",
        "to": "assets/",
        "filter": [
          "**/*"
        ]
      }
    ],
    "asarUnpack": [
      "**/node_modules/ffmpeg-static/**"
    ],
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "resources/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "VidGrab",
      "uninstallDisplayName": "VidGrab",
      "installerIcon": "resources/icon.ico",
      "uninstallerIcon": "resources/icon.ico",
      "installerHeaderIcon": "resources/icon.ico",
      "deleteAppDataOnUninstall": false
    },
    "mac": {
      "target": [
        "zip"
      ],
      "icon": "resources/icon.png",
      "category": "public.app-category.utilities"
    },
    "dmg": {
      "title": "VidGrab Installer",
      "icon": "resources/icon.png"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "resources/icon.png",
      "category": "AudioVideo",
      "synopsis": "YouTube Video Downloader",
      "description": "Fast & beautiful YouTube video downloader - Download videos, playlists, and channels with ease. Powered by yt-dlp."
    },
    "deb": {
      "depends": [
        "libgtk-3-0",
        "libnotify4",
        "libnss3",
        "libxss1",
        "libxtst6",
        "xdg-utils",
        "libatspi2.0-0",
        "libuuid1"
      ]
    }
  }
}
