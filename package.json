{
  "name": "vidgrab",
  "version": "1.0.0",
  "description": "Fast & beautiful YouTube video downloader - Download videos, playlists, and channels with ease",
  "main": "dist-electron/main.js",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build && tsc -p tsconfig.electron.json",
    "preview": "vite preview",
    "electron:dev": "concurrently \"vite\" \"tsc -p tsconfig.electron.json -w\" \"electron .\"",
    "electron:build": "npm run build && electron-builder",
    "build:win": "npm run build && electron-builder --win",
    "build:mac": "npm run build && electron-builder --mac",
    "build:linux": "npm run build && electron-builder --linux",
    "build:all": "npm run build && electron-builder --win --mac --linux"
  },
  "keywords": [
    "youtube",
    "downloader",
    "electron",
    "yt-dlp",
    "video",
    "vidgrab"
  ],
  "author": {
    "name": "Nazeef Masood",
    "email": "nazeef@vidgrab.app"
  },
  "license": "MIT",
  "type": "commonjs",
  "devDependencies": {
    "@tailwindcss/vite": "^4.1.18",
    "@types/node": "^25.1.0",
    "@types/react": "^19.2.10",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.2",
    "autoprefixer": "^10.4.24",
    "concurrently": "^9.2.1",
    "electron": "^40.1.0",
    "electron-builder": "^26.7.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.18",
    "typescript": "^5.9.3",
    "vite": "^7.3.1"
  },
  "dependencies": {
    "clsx": "^2.1.1",
    "ffmpeg-static": "^5.3.0",
    "ffprobe-static": "^3.1.0",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "tailwind-merge": "^3.4.0",
    "zustand": "^5.0.11"
  },
  "build": {
    "appId": "com.vidgrab.app",
    "productName": "VidGrab",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*"
    ],
    "extraResources": [
      {
        "from": "binaries/",
        "to": "binaries/",
        "filter": ["**/*"]
      },
      {
        "from": "assets/",
        "to": "assets/",
        "filter": ["**/*"]
      }
    ],
    "asarUnpack": [
      "**/node_modules/ffmpeg-static/**",
      "**/node_modules/ffprobe-static/**"
    ],
    "win": {
      "target": ["nsis"],
      "icon": "resources/icon.ico"
    },
    "mac": {
      "target": ["zip"],
      "icon": "resources/icon.png"
    },
    "linux": {
      "target": ["deb"],
      "icon": "resources/icon.png",
      "category": "AudioVideo"
    }
  }
}
